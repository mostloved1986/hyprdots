exec = kvantummanager --set Windows-11
exec = gsettings set org.gnome.desktop.interface icon-theme 'Windows-Eleven'
exec = gsettings set org.gnome.desktop.interface gtk-theme 'Windows-11'
exec = gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'

general {
    gaps_in = 1
    gaps_out = 1
    border_size = 1
    col.active_border = rgba(d9d9d9ff) rgba(a6a6a6ff) 45deg
    col.inactive_border = rgba(404040cc) rgba(262626cc) 45deg
    layout = master
    resize_on_border = true
}
group {
    col.border_active = rgba(d9d9d9ff) rgba(a6a6a6ff) 45deg
    col.border_inactive = rgba(404040cc) rgba(262626cc) 45deg
    col.border_locked_active = rgba(d9d9d9ff) rgba(a6a6a6ff) 45deg
    col.border_locked_inactive = rgba(404040cc) rgba(262626cc) 45deg
}
master {
    smart_resizing = true
no_gaps_when_only = 1
new_on_top = true
new_is_master = false
}
decoration {
    rounding = 0
    drop_shadow = true
    shadow_ignore_window = true
    shadow_offset = -7 -7 7 7 
    shadow_range = 7
    shadow_render_power = 8
 # col.shadow = 0x000000

    blur {
        enabled = yes
        size = 10
        passes = 10
        new_optimizations = on
        ignore_opacity = on
        xray = true
    }
}

exec = ~/.config/hypr/scripts/togglewallbash.sh --off
#blurls = waybar
